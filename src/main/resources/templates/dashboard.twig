{% extends 'layout.twig' %}

{% block title %}
    Cuzco dashboard
{% endblock %}

{% block pageHeading %}
    Your dashboard
{% endblock %}

{% block main %}
    <div>
        {% if contacts %}
            <h3>Your contacts</h3>
            <ul>
                {% for contact in contacts %}
                    <li>
                        {{ contact.getName() }}
                    </li>
                {% endfor %}
            </ul>
        {% else %}
            <p>
                You don't have any contacts yet...
            </p>
        {% endif %}
    </div>
{% endblock %}

