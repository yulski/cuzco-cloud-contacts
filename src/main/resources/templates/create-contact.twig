{% extends 'layout.twig' %}

{% block title %}
    Cuzco create contact
{% endblock %}

{% block pageHeading %}
    Create contact
{% endblock %}

{% block main %}
    <form method="post" action="{{ path(PATH_CREATE_CONTACT, {'id': contact.getId()}) }}">
        <section>
            <label for="name">Name: </label>
            <input type="text" id="name" name="name" required>
        </section>
        <section>
            <label for="phoneNumber">Phone number: </label>
            <input type="text" id="phoneNumber" name="phoneNumber" required>
        </section>
        <input type="submit" value="Create"/>
    </form>
{% endblock %}
