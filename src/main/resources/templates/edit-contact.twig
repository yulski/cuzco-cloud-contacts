{% extends 'layout.twig' %}

{% block title %}
    Cuzco edit contact
{% endblock %}

{% block pageHeading %}
    Edit contact - {{ contact.getName() }}
{% endblock %}

{% block main %}
    <form method="post" action="{{ path(PATH_EDIT_CONTACT, {'id': toString(contact.getId())}) }}">
        <section>
            <label for="name">Name: </label>
            <input type="text" id="name" name="name" value="{{ contact.getName() }}">
        </section>
        <section>
            <label for="phoneNumber">Phone number: </label>
            <input type="text" id="phoneNumber" name="phoneNumber" value="{{ contact.getPhoneNumber() }}">
        </section>
        <input type="submit" value="Confirm" id="submit"/>
    </form>
{% endblock %}
